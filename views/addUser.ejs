<!-- include header -->
<%- include('./partials/header') %>
<!-- end header -->

<div class="add-new-user">
    <div class="add-user w-100 d-flex justify-content-center align-items-center">
        <h1>Add new user</h1>
    </div>
    <div class="back-to-home mb-4">
        <a href="/"><i class="bi bi-house-fill"></i> Back to Home</a>
    </div>

    <div class="add-user-form">

        <form action="" class="insert-user">

            <div class="mb-3">
                <label for="name" class="form-label fw-bold">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Ronel Florida">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label fw-bold">Email</label>
                <input type="email" class="form-control" id="email" placeholder="example@gmail.com">
            </div>
            <div class="mb-3">
                <label for="age" class="form-label fw-bold">Age</label>
                <input type="age" class="form-control w-50" id="age" placeholder="Enter your age...">
            </div>
            
            <!-- gender -->
            <div class="gender-select d-flex flex-column mb-4 gap-3">
                <label class="fw-bold">Gender</label>
                <div class="gender-select">
                    <div class="form-check-inline ml-4">
                        <label class="form-check-label" for="male">Male</label>
                        <input class="form-check-input" type="radio" name="gender" id="male" value="Male">
                        
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label" for="female">Female</label>
                        <input class="form-check-input" type="radio" name="gender" id="female" value="Female">
                    </div>
                </div>
               
            </div>

            <!-- status -->
            <div class="gender-select d-flex flex-column mb-4 gap-3">
                <label class="fw-bold">Status</label>
                <div class="gender-select">
                    <div class="form-check-inline ml-4">
                        <label class="form-check-label" for="active">Active</label>
                        <input class="form-check-input" type="radio" name="status" id="active" value="Active">
                        
                    </div>
                    <div class="form-check-inline">
                        <label class="form-check-label" for="inactive">InActive</label>
                        <input class="form-check-input" type="radio" name="status" id="inactive" value="InActive">
                    </div>
                </div>
               
            </div>
           
            <!-- button -->
            <button class="btn w-100" type="button">Save</button>

        </form>

    </div>
    
</div>
   

<!-- include footer -->
<%- include('./partials/footer') %>
<!-- end footer -->